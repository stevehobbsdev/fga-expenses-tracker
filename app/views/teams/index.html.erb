<h1 class="text-3xl text-gray-500 font-light mb-10">Teams</h1>

<div class="rounded-lg bg-gray-100 overflow-auto mt-10">
  <table class="table-auto w-full mt-5 border-collapse">
    <thead>
      <tr>
        <th class="<%= default_table_header_classes %>">Name</th>
        <th class="<%= default_table_header_classes %>">Members</th>
        <th class="<%= default_table_header_classes %>">Expense approver?</th>
      </tr>
    </thead>
    <tbody class="bg-white">
      <% @teams.each do |team| %>
        <tr>
          <td class="<%= default_table_row_classes %> font-semibold">
            <%= link_to team.name, edit_team_path(team), class: 'text-blue-500 hover:underline' %>
          </td>
          <td class="<%= default_table_row_classes %>"><%= team.members.size %></td>
          <th class="<%= default_table_header_classes %>"><%= team.expense_approver ? 'yes' : 'no' %></th>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>