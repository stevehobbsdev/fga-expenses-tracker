
<h1 class="text-2xl mb-5">My expenses</h1>
<%= link_to 'Create new', new_expense_path, class: 'p-3 bg-blue-600 text-white shadow rounded' %>

<table class="table-auto w-full mt-5">
  <thead>
    <tr>
      <th class="px-4 py-2">Amount</th>
      <th class="px-4 py-2">Description</th>
      <th class="px-4 py-2">Created at</th>
      <th class="px-4 py-2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td class="border px-4 py-2"><%= expense.amount %></td>
        <td class="border px-4 py-2"><%= expense.description %></td>
        <td class="border px-4 py-2"><%= expense.created_at %></td>
        <td class="border px-4 py-2">
          <%= link_to 'Edit', edit_expense_path(expense.id), class: 'p-2 mr-3 bg-gray-100 text-slate-500 shadow rounded' %>
          <%= link_to 'Delete', expense_path(expense.id), method: :delete, data: { confirm: 'Are you sure?' }, class: 'p-2 bg-red-600 text-white shadow rounded' %>
        </td>
      </tr>
    <% end %>
  </tbody>